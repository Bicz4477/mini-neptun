{% extends 'page' %} {% block content %}

<h2>Mire cserélnél?</h2>

<form class="form-horizontal" method="post">
    {{ csrfField }}
    <div class="form-group">
        <select class="form-control" id="wanted" name="wanted">
        {% for course in subjects.courses %}
        {% if give != course.id %}
        <option value="{{ course.id }}"
        >{{ course.id }}. kurzus, időpont: {{ course.class_schedule }}</option>
        {% endif %}
        {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
            <a class="btn btn-default" href="subject/{{subjects.id}}" >Mégsem</a>
            <button type="submit" class="btn btn-primary">Mentés</button>
        </div>
    </div>
</form>
{% endblock %}