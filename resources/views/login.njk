{% extends 'page' %} {% block content %}

<h2>Belépés</h2>

{% if old('errors') %}

<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibák</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}

<form class="form-horizontal" method="POST">
  {{ csrfField }}
  <div class="form-group">
    <label for="username" class="col-lg-2 control-label">Felhasználónév:</label>
    <div class="col-lg-4">
      <input class="form-control" name="username" type="username" placeholder="Neptun kód" />
    </div>
  </div>
  <div class="form-group">
    <label for="password" class="col-lg-2 control-label">Jelszó:</label>
    <div class="col-lg-4">
      <input class="form-control" name="password" type="password" placeholder="Jelszó" />
    </div>
  </div>
  <div class="col-lg-10 col-lg-offset-2">
    <input class="btn btn-primary" type="submit" value="Bejelentkezés" />
  </div>
</form>
{% endblock %}