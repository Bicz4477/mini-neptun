{% extends 'page' %}

{% block scripts %}
    <script src="/urlValidation.js"></script>
{% endblock %}

{% block content %}
<h2>Új tárgy</h2>


{% if old('errors') %}
<div class="panel panel-danger">
    <div class="panel-heading">
        <h3 class="panel-title">Hibák</h3>
    </div>
    <div class="panel-body">
        <ul>
            {% for error in old('errors') %}
            <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endif %}

<form class="form-horizontal" method="post">

    {{ csrfField }}
    <div class="form-group">
        <label for="name" class="col-lg-2 control-label">Tárgy neve</label>
        <div class="col-lg-10">
            <input type="text" class="form-control" id="name" name="name" placeholder="Tárgy neve" value="{{old('name')}}" required>
        </div>
    </div>
    <div class="form-group">
        <label for="credit" class="col-lg-2 control-label">Kredit</label>
        <div class="col-lg-10">
            <input type="number" class="form-control" id="credit" name="credit" placeholder="Kredit" value="{{old('credit')}}" required>
        </div>
    </div>
    <div class="form-group">
        <label for="description" class="col-lg-2 control-label">Leírás</label>
        <div class="col-lg-10">
            <textarea class="form-control" rows="3" id="description" name="description">{{old('description')}}</textarea>
            <span class="help-block">Leírás</span>
        </div>
    </div>
    <div class="form-group">
        <label for="web" class="col-lg-2 control-label">Honlap</label>
        <div class="col-lg-10">
            <textarea class="form-control" rows="1" id="web" name="web" placeholder="http://example.com">{{old('web')}}</textarea>
            <span class="help-block">Honlap</span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
            <a class="btn btn-default" href="/" >Mégsem</a>
            <button id="submit" type="submit" class="btn btn-primary">Létrehozás</button>
        </div>
    </div>
</form>

{% endblock %}